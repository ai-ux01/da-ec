# Server
NODE_ENV=development
PORT=4000
API_PREFIX=/api

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/amrytum?schema=public"

# JWT (admin sessions)
JWT_SECRET=your-super-secret-key-min-32-chars

# Magic link base URL (where admin clicks the link)
MAGIC_LINK_BASE_URL=http://localhost:4000/api/admin/auth/verify

# S3-compatible storage (e.g. MinIO, AWS S3, Cloudflare R2)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=amrytum
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_USE_SSL=false

# Optional: email for magic links (if not set, link is returned in API response for dev)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# MAGIC_LINK_EMAIL_FROM=admin@amrytum.com
